package cursojava;

import java.util.Locale;
import java.util.Scanner;

public class comorientacaoobjeto2 {
	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter the measures of triangles X");
		double A = sc.nextDouble();
		double B = sc.nextDouble();
		double C = sc.nextDouble();
		System.out.println("Enter the measures of triangles Y");
		double D = sc.nextDouble();
		double E = sc.nextDouble();
		double F = sc.nextDouble();
		
		double pX = (A+B+C) / 2;
		double X = Math.sqrt(pX * (pX - A) * (pX - B) * (pX - C));
		
		double pY = (D+E+F) / 2;
		double Y = Math.sqrt(pY * (pY - D) * (pY - E) * (pY - F));

		System.out.printf("Triangles X area: %.4f\n", X);
		System.out.printf("Triangles Y area: %.4f\n", Y);
		
		if (X > Y) {
			System.out.println("Larger area: X");
		}
		else {
			System.out.println("Larger area: Y");
		}
		
		sc.close();
	}
}
